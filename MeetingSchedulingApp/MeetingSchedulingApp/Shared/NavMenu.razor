
<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
       <div>
            @if (collapseNavMenu)
            {
                <button class="btn text-light p-0 px-1" @onclick="ToggleNavMenu">
                    <span class="oi oi-menu"></span>
                </button>
            }
            else{
                    <button class="btn toggle-color p-0 px-1" @onclick="ToggleNavMenu">
                    <span class="oi oi-menu"></span>
                </button>
            }
            
       </div>
       
    </div>
</div>

<div class="@NavMenuCssClass">
    @if (collapseNavMenu)
    {
     <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" style="border-radius:10px !important" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" style="width:2rem !important" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
                <NavLink class="nav-link" style="border-radius:10px !important" href="counter">
                <span class="oi oi-plus" style="width:2rem !important" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
                <NavLink class="nav-link" style="border-radius:10px !important" href="fetchdata">
                    <span class="oi oi-list-rich" style="width:2rem !important" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
    </nav>
    }
    else
    {
     <nav class="flex-column">
            <div class="nav-item px-2">
             <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span>
                </NavLink>
            </div>
            <div class="nav-item px-2">
                <NavLink class="nav-link" href="counter">
                    <span class="oi oi-plus" aria-hidden="true"></span>
                </NavLink>
            </div>
            <div class="nav-item px-2">
                <NavLink class="nav-link" href="fetchdata">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>
                </NavLink>
            </div>
        </nav>
    }
   
</div>

@code {
    [Parameter]
    public EventCallback<bool> SidebarClass { get; set; }

    private bool collapseNavMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? null:"collapse" ;

    private async Task ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;

        await SidebarClass.InvokeAsync(!collapseNavMenu);

    }
}
